        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
        title Cost Monitor
    body 
    nav.navbar.navbar-expand-lg.bg-dark.navbar-dark.py-3
      .container
        a.navbar-brand(href='#') Zawash
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navmenu')
          span.navbar-toggler-icon
        #navmenu.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/cartracker') Car Wash Tracking
            li.nav-item
              a.nav-link(href='/costmonitor') Cost Monitor
            li.nav-item
              a.nav-link(href='/logout') Summary for The Day
    span.d-sm-flex.align-items-center-justify-content-between.text-light Cost Monitor    
            .container
              .row
                .col
                  .card.bg-dark.text-light 
                   .card-body.text-center
                      form(action="/costmonitor",method="post")    
                        h5 Recording the Costs for the day
                        h6 Number of Polish Boxes used 
                        input(type='number' name='numberofpolishboxes')
                        h6 Number of Powdered Detergents used
                        input(type='number' name='numberofdetergents')
                        h6 Number of Electricity Units used
                        input(type='number' name='numberofelectricity')
                        br
                        
                        button.btn-success(type="submit") Calculate
                .col
                  .card.bg-dark.text-light  
                    .card-body.text-center
                      table(style='width:100%')
                        tr
                          th Quantity
                          th Item
                          th Unit Cost
                        tr
                          td 1
                          td Polish 
                          td 10,000
                        tr
                          td 1
                          td Powdered Detergent
                          td 5,000
                        tr
                          td 1
                          td Electricity Unit
                          td 2,000
                      
                  

            
                      
                        
                      
                        
                        
                            