//- extends layout
//- block content
header.card-header
    h4.card-title Car Washer Details
br
nav
#nav-tab.nav.nav-tabs(role='tablist')
    a#nav-profile-tab.nav-item.nav-link(href='/report/payout') Washer Payout
    a#nav-contact-tab.nav-item.nav-link(href='/report/expenses-report')  Expense Report
    a#nav-contact-tab.nav-item.nav-link(href='/report/collection')  Collection Report
    a#nav-profile-tab.nav-item.nav-link.active(href='/report/washer-details') Washer Details
#nav-tabContent.tab-content
br
table.table.table-bordered 
    thead
        tr
            th Full Name 
            th NIN
            th Date of Birth
            th Phone number
            th Gender
            th Place of residence
            th
    tbody
        if washers.length
            each washer in washers
                tr
                    td #{washer.fullname}
                    td #{washer.nationalId}
                    td #{moment(washer.date).format('DD/MM/YYYY')}
                    td #{washer.phoneNumber}
                    td #{washer.gender}
                    td #{washer.place}
                    td
                        form(method="post" action='/register/delete-washer')
                            input(type="hidden", placeholder="", name="id", value=user._id)
                            button.btn.btn-primary.btn-block(type="submit") Delete



    
            