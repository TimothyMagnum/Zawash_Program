doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Zawash 2021 Manager SIGNUP AND LOGIN
    link(rel='stylesheet' href='/style.css')
    script(src="/validation.js")
    //- link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    //- script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
  body
    
    h2(style='font-family: Verdana, Geneva, Tahoma, sans-serif;') Zawash 
    .container
      .bluebg
        .box.signin
          h2 Already have An Account ?
          button.signinBtn Sign In
        .box.signup
          h2 Don't have An Account ?
          button.signupBtn(type='submit') Sign Up
      .formBx
        .form.signinForm
          form(name='SignIn' action="/manager", method="post" id="SignIn")
            h3 Sign In
            input(type='text' placeholder='User Name' name='username' id="username" required)
            input(type='password' placeholder='Password' name='password' id="password" required)
            button(type='submit' onclick="Login()") Sign In
            a.forgot(href='#') Forgot Password
        .form.signupForm
          form(name='SignUp' action="/manager", method="post")
            h3 Sign Up
            input(type='text' placeholder='User Name' name='username' id="Username")
            input(type='text' placeholder='Phone Number' name='phonenumber' id="PhoneNumber")
            input(type='text' placeholder='Email Address' name='email' id="Email")
            input(type='password' placeholder='Password' name='password' id="Password")
            input(type='password' placeholder='Confirm password' name='confirmPassword' id='ConfirmPassword')
            button(type='submit' onclick="Signup()") Register
            a.forgot(href='#') Forgot Password
    script.
      const signInBtn=document.querySelector('.signinBtn')
      const signupBtn=document.querySelector('.signupBtn') 
      const formBx=document.querySelector('.formBx')
      const body =document.querySelector('body')
      signupBtn.onclick =function(){
      formBx.classList.add('active')
      body.classList.add('active')
      }
      
      signInBtn.onclick=function(){
      formBx.classList.remove('active')
      body.classList.remove('active')
      }
      
