doctype html
html(lang='en')
  head
    title Login Form In Pug
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel="stylesheet", href="styles.css")
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    script(src='validate.js')
      
  body
  nav.navbar.navbar-expand-lg.bg-dark.navbar-dark.py-3
    .container
      a.navbar-brand(href='#') Zawash
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navmenu')
        span.navbar-toggler-icon
      #navmenu.collapse.navbar-collapse
        ul.navbar-nav.ms-auto
          li.nav-item
            a.nav-link(href='/carTracker') Car Wash Tracking
          li.nav-item
            a.nav-link(href='/costMonitor') Cost Monitor 
          li.nav-item
            a.nav-link(href='/workerReports') Worker Reports
          li.nav-item
            a.nav-link(href='/loginManager/logout') Logout
  #main
    form#register(name='register' method='POST' action='/register'  onsubmit='return Value()')
      .label Register Your Worker
      .data
        #error
        input#fullname(type='text' placeholder='Full Name Of worker' name='fullname')
      .data
        input#phoneNumber(type='Phone Number' placeholder='Phone Number Of worker' name='phoneNumber')
      .data
        select#gender.form-select(name='gender')
          option(value='') Gender
          option(value='M') Male
          option(value='F') Female
      .data
        br
        input#date(type='text' name='date'  max="2003-12-01" onfocus="(this.type='date')")
      .data
        input#NationalId(placeholder='National Id' name='nationalId')
      .data
        input#place(placeholder='Place of Residence' name='place')
      .data
        input#zawashid(placeholder='Zwash+3 numbers' name='zawashid')
      button(type='submit') Register
