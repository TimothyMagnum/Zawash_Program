doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
    
    title Main Page
  body
    nav.navbar.navbar-expand-lg.bg-dark.navbar-dark.py-3
      .container
        a.navbar-brand(href='#') Zawash
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navmenu')
          span.navbar-toggler-icon
        #navmenu.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href='/cartracker') Car Wash Tracking
            li.nav-item
              a.nav-link(href='/costmonitor') Cost Monitor
            li.nav-item
              a.nav-link(href='/logout') Log Out for The Day Now
    section.bg-dark.text-light.p-5.text-center.text-sm-start
      .container
        .d-sm-flex.align-items-center-justify-content-between
          div
            h1
              span.text-success Zawash Car Wash Tracker
            p.lead.my-4  Input the details for the Car to have it Inserted in The DataBase
        form.align-items-center-justify-content-between(action='/car' method='post')
          // Color
          h3 Colour of Car
          input(type='color' name='')
          div
            // Number Plate
            h3 Number Plate of Car
            input(type='number' name='')
            // Time
            h3 Time of Arrival
            input(type='time' name='')
            // Date
            h3 Date Arrived
            input(type='datetime-local' name='')
            // Make/Model
            h3 Make(Model)
            input(type='text' name='')
            // Type either small/large/Truck
            h3 Type(Size)Of Car
            input(type='text' name='')
            // Package of Car Wash
            h3 Car Wash Package
            input(type='text' name='')
            // Package of Car Wash
            h3 Washed By
            input(type='text' name='')
          button.btn-primary.btn-lg.my-4 Save Car Data
          h3 Number of Cars Washed:
          h2
            span.d-sm-flex.align-items-center-justify-content-between Cost Monitor
          section.p-5.bg-light.text-light.p-5.text-center.text-sm-start
            .container
              .row
                .col-md
                  .card.bg-dark.text-light
                    .card-body.text-center
                      h2 Recording the Costs for the day
                      p Number of Polish Boxes used
                      input(type='number' name='')
                      p Number of Powdered Detergents used
                      input(type='number' name='')
                      p Number of Electricity Units used
                      input(type='number' name='')
                      br
                      button.mt-5 Calculate the Total costs
                .col-md
                  .card.bg-dark.text-light
                    .card-body.text-center
                      h2 Recording the Pay
                      p Name of worker x
                      input(type='text' name='')
                      p Number of cars washed by x
                      input(type='number' name='')
                      p Pay for x that day
                      input(type='number' name='')
                      br
                      button.mt-5 Calculate the Total Pay
          section#logout.p-5.bg-dark
            .col-md
              .card.bg-dark.text-light
                .card-body.text-right
                  p.mb-4 Total earnings for Year
                  input(type='number' name='')
                .card-body.text-left
                  p.mb-4 Total earnings for week
                  input(type='number' name='')
                .card-body.text-center
                  h2 Log Out for the Day
                  p Total earnings for Day
                  input(type='text' name='')
                  p Number of cars washed Today
                  input(type='number' name='')
                  br
                  button.mt-5 Calculate the Total Sum
          script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
