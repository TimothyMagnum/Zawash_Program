doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        title Cost monitor
    body 
    h2
            span.d-sm-flex.align-items-center-justify-content-between Cost Monitor
                  section.p-5.bg-light.text-light.p-5.text-center.text-sm-start
            .container
              .row
                .col-md
                  .card.bg-dark.text-light
                  
                    .card-body.text-center
                      form(action="/costmonitor",method="post")    
                        h2 Recording the Costs for the day
                        p Number of Polish Boxes used 
                        input(type='number' name='numberofpolishboxes')
                        p Number of Powdered Detergents used
                        input(type='number' name='numberofdetergents')
                        p Number of Electricity Units used
                        input(type='number' name='numberofelectricity')
                        br
                        button.mt-5(type="submit") Calculate the Total costs
